<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_id"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="120dp"
    android:layout_height="wrap_content"

    android:minHeight="220dp"
    android:maxHeight="250dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"

    android:layout_margin="5dp"
    cardview:cardCornerRadius="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <LinearLayout
        android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ImageView
    android:id="@+id/tovar_r_image"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:scaleType="centerCrop"

    android:background="@color/aluminum"
   />

        <TextView
            android:id="@+id/tovar_r_skidka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="20%"
            android:layout_marginLeft="10sp"
            android:background="#E43F3F"
            android:layout_marginTop="-11sp"
            android:textColor="@color/white"
            android:padding="2sp"


            tools:ignore="SmallSp"
            android:layout_marginStart="10dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tovar_r_old_cena"
                android:textColor="#2d2d2d"
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18 000"
                />

            <TextView
                android:id="@+id/tovar_r_new_cena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_toEndOf="@+id/tovar_r_old_cena"
                android:layout_toRightOf="@+id/tovar_r_old_cena"
                android:text="15 000 руб."
                android:textColor="#2d2d2d"
                android:textStyle="bold
"
                android:textSize="12sp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tovar_r_name"
            android:textColor="#2d2d2d"
            android:textSize="13sp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tovar Name"
             />

            <TextView
                android:id="@+id/tovar_r_category"
                android:textColor="#2d2d2d"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tovar Name"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:paddingBottom="5dp"
                />












    </LinearLayout>
    <com.like.LikeButton
        android:id="@+id/tovar_r_like2"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_margin="2sp"

        android:layout_gravity="right"
        android:foregroundGravity="center"

        android:scaleType="fitCenter"
        app:anim_scale_factor="0.5"



        app:icon_size="27dp"
        app:icon_type="heart"





        tools:ignore="RtlHardcoded"
        tools:targetApi="lollipop" />
</androidx.cardview.widget.CardView>