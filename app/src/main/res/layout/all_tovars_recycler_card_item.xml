<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_id"
    android:layout_width="120dp"
    android:layout_height="wrap_content"

    android:layout_margin="5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"

    android:maxHeight="250dp"
    android:minHeight="220dp"
    cardview:cardCornerRadius="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tovar_r_image"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/aluminum"

            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tovar_r_skidka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="-11sp"
            android:background="#E43F3F"
            android:padding="2sp"
            android:text="20%"
            android:textColor="@color/white"


            android:textSize="12sp"
            tools:ignore="SmallSp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/textViewFavouriteTovarOldCena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:text="18 000"
                android:textColor="#2d2d2d"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/textViewFavouriteTovarNewCena"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_toEndOf="@+id/textViewFavouriteTovarOldCena"
                android:layout_toRightOf="@+id/textViewFavouriteTovarOldCena"
                android:text="15 000 руб."
                android:textColor="#2d2d2d"
                android:textSize="12sp"
                android:textStyle="bold
" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tovar_r_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:text="Tovar Name"
            android:textColor="#2d2d2d"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tovar_r_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:text="Category Name"
            android:textColor="#2d2d2d"
            android:textSize="12sp" />

    </LinearLayout>

    <com.like.LikeButton
        android:id="@+id/tovar_r_like2"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_gravity="right"
        android:layout_margin="2sp"
        android:foregroundGravity="center"
        android:scaleType="fitCenter"
        app:anim_scale_factor="0.5"
        app:icon_size="27dp"
        app:icon_type="heart"
        tools:ignore="RtlHardcoded"
        tools:targetApi="lollipop" />
</androidx.cardview.widget.CardView>