<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sales_shop_cardview_id"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="15sp"
    cardview:cardCornerRadius="8sp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="#edecec" />
        <ImageView
            android:id="@+id/shop_image"
            android:layout_width="match_parent"
            android:layout_height="260sp"
            android:scaleType="centerCrop"
            android:layout_marginTop="1dp"
            android:cropToPadding="true"
        />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#edecec" />

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="10sp"
            android:paddingLeft="10sp"
            android:paddingBottom="5sp"
            android:text="Shop Name"
            android:textStyle="bold"
            android:textSize="18sp" />
        <View
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="1dp"
            android:background="#edecec"
             />
        <LinearLayout
            android:layout_width="match_parent"
            android:minHeight="40sp"
            android:id="@+id/shop_location"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginStart="10sp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/shop_location_gmap"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/gmap" />
            <TextView
                android:id="@+id/shop_location_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:text="Shop Location"
                android:textSize="16sp"
                android:paddingStart="5sp"
                android:paddingEnd="5sp"

                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"

            android:layout_height="1sp"
            android:background="#edecec" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:paddingStart="10sp"
            android:paddingLeft="10sp"
            android:paddingEnd="10sp"
            android:paddingRight="10sp"
            android:text="О магазине"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/shop_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10sp"
            android:paddingLeft="10sp"
            android:paddingEnd="10sp"
            android:maxLines="4"
            android:ellipsize="end"
            android:paddingBottom="10sp"
            android:paddingRight="10sp"
            android:gravity="fill_horizontal"
            android:text="Описание отсутствует"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:id="@+id/root_amin">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/shop_about"
            android:layout_marginTop="5sp"

            android:layout_gravity="center"
            android:paddingBottom="8sp"
            android:divider="@drawable/separator"
            android:showDividers="middle"
            android:animateLayoutChanges="true"
            >
            <ImageView
                android:id="@+id/shop_phone"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:src="@drawable/ic_mobile_phone" />
            <ImageView
            android:id="@+id/shop_inst"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:src="@drawable/ic_instagram"

                />

            <ImageView
                android:id="@+id/shop_whatsapp"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:src="@drawable/ic_whatsapp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/shop_about_btn"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
        <ImageView
            android:id="@+id/shop_about_btn_image"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@drawable/anim_shops_about"
            />
    </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>


